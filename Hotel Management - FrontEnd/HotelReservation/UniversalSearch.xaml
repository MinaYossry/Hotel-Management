<UserControl x:Class="Hotel_Management___FrontEnd.UniversalSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_Management___FrontEnd"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Margin="5" Grid.Row="0">
            <Button DockPanel.Dock="Right" Width="100" Click="Button_Click" >Search</Button>
            <TextBox DockPanel.Dock="Left" Name="SearcBox" Margin="5 0"></TextBox>
        </DockPanel>
        <DataGrid x:Name="SearchResultDataGrid" Margin="5" Grid.Row="1">
            
        </DataGrid>
    </Grid>
</UserControl>
